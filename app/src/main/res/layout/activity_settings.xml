<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select a Chat Theme Color"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintBottom_toBottomOf="parent">

    <ImageView
        android:id="@+id/first"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_row="0"
        android:layout_column="0"
        android:padding="10dp"
        app:srcCompat="@drawable/pick_image_btn" />
    <ImageView
        android:id="@+id/second"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_row="0"
        android:layout_column="1"
        android:padding="10dp"
        app:srcCompat="@drawable/bg_brown" />
    <ImageView
        android:id="@+id/third"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_row="1"
        android:layout_column="0"
        android:padding="10dp"
        app:srcCompat="@drawable/bg_blue" />

    <ImageView
        android:id="@+id/fourth"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_row="1"
        android:layout_column="1"
        android:padding="10dp"
        app:srcCompat="@drawable/bg_red" />

    <ImageView
        android:id="@+id/fifth"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_row="2"
        android:layout_column="0"
        android:padding="10dp"
        app:srcCompat="@drawable/bg_black" />

    <ImageView
        android:id="@+id/sixth"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_row="2"
        android:layout_column="1"
        android:padding="10dp"
        app:srcCompat="@drawable/bg_bw_bordered" />

    </GridLayout>

    <Button
        android:id="@+id/theme_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:text="Save"
        android:visibility="invisible"
        android:textAllCaps="false"
        android:textColor="@color/color_white"
        android:background="@drawable/pick_image_btn"/>

    <Button
        android:id="@+id/theme_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:text="Cancel"
        android:visibility="invisible"
        android:textAllCaps="false"
        android:textColor="@color/color_white"
        android:background="@drawable/bg_red" />

</androidx.constraintlayout.widget.ConstraintLayout>